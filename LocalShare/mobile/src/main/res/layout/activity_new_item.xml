<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center_horizontal"
        android:textSize="24dip"
        android:text="New Item"
        android:textColor="#FF000000"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:textColor="#FF000000"
        android:textColorHint="#808080"
        android:hint="Name"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/description"
        android:textColor="#FF000000"
        android:textColorHint="#808080"
        android:hint="Description"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pricePerDay"
        android:textColor="#FF000000"
        android:textColorHint="#808080"
        android:hint="Price Per Day"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lateFee"
        android:textColor="#FF000000"
        android:textColorHint="#808080"
        android:hint="Late Fee Per Day"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/damageFee"
        android:textColor="#FF000000"
        android:textColorHint="#808080"
        android:hint="Damage Fee"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/delivery"
        android:textColor="#FF000000"
        android:textColorHint="#808080"
        android:hint="Delivery"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rentalTerms"
        android:textColorHint="#808080"
        android:textColor="#FF000000"
        android:hint="Rental Terms"/>


    <!-- Save Button -->
    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:text="Save Changes"/>

</LinearLayout>
