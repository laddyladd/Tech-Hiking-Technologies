<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingTop="24dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center_horizontal"
        android:textSize="24dip"
        android:textColor="#FF000000"
        android:text="Item"
        android:id="@+id/itemName"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center_horizontal"
        android:textSize="16dip"
        android:textColor="#FF000000"
        android:text="Price / Day: " />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/itemPrice"
        android:textColorHint="#808080"
        android:textColor="#FF000000"
        android:hint="Price per day"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center_horizontal"
        android:textSize="16dip"
        android:textColor="#FF000000"
        android:text="Late Fee / Day: "/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/itemLateFee"
        android:textColorHint="#808080"
        android:textColor="#FF000000"
        android:hint="Late fee per day"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center_horizontal"
        android:textSize="16dip"
        android:textColor="#FF000000"
        android:text="Damage Fee: " />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/itemDamageFee"
        android:textColorHint="#808080"
        android:textColor="#FF000000"
        android:hint="Damage fee"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center_horizontal"
        android:textSize="16dip"
        android:textColor="#FF000000"
        android:text="Other Rental Terms: "/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/itemRentalTerms"
        android:textColorHint="#808080"
        android:textColor="#FF000000"
        android:hint="Rental Terms"/>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:padding="12dp"
        android:text="Save Changes"/>


</LinearLayout>